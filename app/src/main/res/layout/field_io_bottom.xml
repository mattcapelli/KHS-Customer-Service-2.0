<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/field_io_bottom"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#00000c"
        android:padding="10dp"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:background="@drawable/button_border"
        android:id="@+id/button32"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="172dp"
        android:onClick="send_field_io_bottom1"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/button_border"
        android:id="@+id/button33"
        android:layout_below="@+id/button32"
        android:layout_alignLeft="@+id/button32"
        android:layout_alignStart="@+id/button32"
        android:onClick="send_field_io_bottom_list"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button_border"
        android:id="@+id/button34"
        android:layout_below="@+id/button33"
        android:layout_alignLeft="@+id/button33"
        android:layout_alignStart="@+id/button33"
        android:onClick="send_field_io_bottom6"/>
</RelativeLayout>