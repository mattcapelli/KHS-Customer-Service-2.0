<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/heater_circuit_protection"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#00000c"
        android:padding="10dp"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:layout_width="185dp"
        android:layout_height="90dp"
        android:background="@drawable/button_border"
        android:id="@+id/button38"
        android:layout_marginTop="142dp"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="send_heater_circuit_protection1"/>

    <Button
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:background="@drawable/button_border"
        android:id="@+id/button39"
        android:layout_alignTop="@+id/button38"
        android:layout_toRightOf="@+id/button38"
        android:layout_toEndOf="@+id/button38"
        android:onClick="send_heater_circuit_protection2"/>
</RelativeLayout>