<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/safety_interlock_communication"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#00000c"
        android:padding="10dp"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:background="@drawable/button_border"
        android:id="@+id/button54"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="152dp"
        android:onClick="send_safety_interlock_communication_list1"/>

    <Button
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:background="@drawable/button_border"
        android:id="@+id/button55"
        android:layout_alignTop="@+id/button54"
        android:layout_toRightOf="@+id/button54"
        android:layout_toEndOf="@+id/button54"
        android:onClick="send_safety_interlock_communication3"/>

    <Button
        android:layout_width="65dp"
        android:layout_height="100dp"
        android:background="@drawable/button_border"
        android:id="@+id/button56"
        android:layout_alignTop="@+id/button55"
        android:layout_toRightOf="@+id/button55"
        android:layout_toEndOf="@+id/button55"
        android:onClick="send_safety_interlock_communication4"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="115dp"
        android:background="@drawable/button_border"
        android:id="@+id/button57"
        android:layout_alignTop="@+id/button56"
        android:layout_toRightOf="@+id/button56"
        android:layout_toEndOf="@+id/button56"
        android:layout_marginTop="-15dp"
        android:onClick="send_safety_interlock_communication_list2"/>
</RelativeLayout>