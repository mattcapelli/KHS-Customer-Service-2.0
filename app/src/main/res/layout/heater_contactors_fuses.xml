<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/heater_contactors_fuses"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#00000c"
        android:padding="10dp"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="115dp"
        android:background="@drawable/button_border"
        android:id="@+id/button40"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="145dp"
        android:onClick="send_heater_contactors_fuses1"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:background="@drawable/button_border"
        android:id="@+id/button41"
        android:layout_alignTop="@+id/button40"
        android:layout_toRightOf="@+id/button40"
        android:layout_toEndOf="@+id/button40"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="-15dp"
        android:onClick="send_heater_contactors_fuses2"/>

    <Button
        android:layout_width="45dp"
        android:layout_height="115dp"
        android:background="@drawable/button_border"
        android:id="@+id/button42"
        android:layout_alignTop="@+id/button40"
        android:layout_toRightOf="@+id/button41"
        android:layout_toEndOf="@+id/button41"
        android:layout_marginLeft="10dp"
        android:onClick="send_heater_contactors_fuses3"/>
</RelativeLayout>