<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/plc_rack"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#00000c"
        android:padding="10dp"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="130dp"
        android:background="@drawable/button_border"
        android:id="@+id/button46"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="131dp"
        android:onClick="send_plc_rack1"/>

    <Button
        android:layout_width="190dp"
        android:layout_height="130dp"
        android:background="@drawable/button_border"
        android:id="@+id/button47"
        android:layout_alignTop="@+id/button46"
        android:layout_toRightOf="@+id/button46"
        android:layout_toEndOf="@+id/button46"
        android:onClick="send_plc_rack_list"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:background="@drawable/button_border"
        android:id="@+id/button48"
        android:layout_alignTop="@+id/button47"
        android:layout_toRightOf="@+id/button47"
        android:layout_toEndOf="@+id/button47"
        android:onClick="send_plc_rack"/>
</RelativeLayout>